
<div class="container">
  <h2 class="py-3 text-center mt-4">Listes des régions</h2>
  <div class="shadow-card">
    <div class="row white">
      <div class="col-xl-1 col-lg-4">#</div>
        <div class="col-xl-3 col-lg-4">Region</div>
        <div class="d-flex justify-content-between w-50 text-center ml-6">
          <% if user_signed_in?%>
            <% if current_user.is_admins == true %>
              <div class="col-xl-6 col-lg-4">Editer</div>
              <div class="col-xl-6 col-lg-4">Supprimer</div>
            <% end%>
          <% end%>
        </div>
      </div>
      <div class="overflow">
        <table class="table table-striped">
          <% i = 1 %>
          <% @region.each do |region|%>
            <tbody class="hover-table">
              <tr class="tr">
                <th><%= i %></th>   
                <td><%= link_to region.name.titleize,region_communes_path(region.id)%><br></td>
                <% if user_signed_in? %>
                  <% if current_user.is_admins == true %>
                    <td class="text-blue"><i class="mr-4 fa fa-pencil-square-o" aria-hidden="true"></i><%= link_to "Editer", edit_region_path(region.id),class:'more_btn_edi text-blue' %></td>
                    <td class="text-red"><i class="mr-4 fa fa-trash" aria-hidden="true"></i><%= link_to "Supprimer", region_path(region.id) , method: "delete",class:'more_btn_sup text-red' %></td>
                  <% end %>
                <% end %>
              </tr>     
            </tbody>
            <% i += 1 %>
          <% end %>
        </table>
      </div>
    </div>

    <% if user_signed_in? %>
      <% if current_user.is_admins == true %>
        <div class="row">
          <div class="col-xl-12">
              <div class="btn-lg btn-block">
                <a href="<%= new_region_path %>" class="w-100 boxed-btn3">Ajouter une région</a>
              </div>
          </div>
        </div>
    <% end %>
  <% end %>
</div>
