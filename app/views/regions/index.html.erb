<%
=begin%>
 <h1>Regions#index</h1>
<% @region.each do |region|%>
	<%= link_to region.name,region_communes_path(region.id)%><br>
	<% if user_signed_in? %>
		<% if current_user.is_admins == true %>
			<%= link_to "edit", edit_region_path(region.id),class:'btn btn-primary' %>
			<%= link_to "supprimé", region_path(region.id) , method: "delete",class:'btn btn-danger' %> <br> <br>
		<% end %>
	<% end %>	
<% end %> 
<%
=end%>
	
<% if user_signed_in? %>
	<% if current_user.is_admins == true %>
		<%= link_to "créé une région", new_region_path ,class:'btn btn-success' %> <br> <br> 
	<% end %>
<% end %>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Region</th>
      <th scope="col">Edit</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <% @region.each do |region|%>
  <tbody>
    <tr>
      <th scope="row"><%= region.id%></th>
      <td><%= link_to region.name,region_communes_path(region.id)%><br></td>
	  <% if user_signed_in? %>
		<% if current_user.is_admins == true %>
      <td><%= link_to "edit", edit_region_path(region.id),class:'btn btn-primary' %></td>
      <td><%= link_to "supprimé", region_path(region.id) , method: "delete",class:'btn btn-danger' %></td>
	  <% end %>
	<% end %>
    </tr>
  </tbody>
  <% end %>
</table>