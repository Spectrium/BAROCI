<%
=begin%>
 <h1>Regions#index</h1>
<% @region.each do |region|%>
	<%= link_to region.name,region_communes_path(region.id)%><br>
	<% if user_signed_in? %>
		<% if current_user.is_admins == true %>
			<%= link_to "edit", edit_region_path(region.id),class:'btn btn-primary' %>
			<%= link_to "supprimé", region_path(region.id) , method: "delete",class:'btn btn-danger' %> <br> <br>
		<% end %>
	<% end %>	
<% end %> 
<%
=end%>


<div class="container">
  <% if user_signed_in? %>
  	<% if current_user.is_admins == true %>
  		<%= link_to "créé une région", new_region_path ,class:'btn btn-success' %> <br> <br> 
  	<% end %>
  <% end %>

  <table class="table table-striped table-dark">

    <thead class="white">
      <tr>
        <th>#</th>
        <th>Region</th>
      <% if user_signed_in?%>
  		  <% if current_user.is_admins == true %>
          <th>Editer</th>
          <th>Supprimer</th>
        <% end%>
      <% end%>
      </tr>
    </thead>
    <% i = 1 %>
    <% @region.each do |region|%>
      <tbody>
        <tr>
          <th><%= i %></th>
          <td><%= link_to region.name,region_communes_path(region.id)%><br></td>
      	  <% if user_signed_in? %>
            <% if current_user.is_admins == true %>
              <td><%= link_to "Editer", edit_region_path(region.id),class:'boutton edit' %></td>
              <td><%= link_to "Supprimer", region_path(region.id) , method: "delete",class:'boutton supprimer' %></td>
        	  <% end %>
      	  <% end %>
        </tr>
      </tbody>
      <% i += 1 %>
    <% end %>
  </table>
</div>