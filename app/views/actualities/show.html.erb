<div class="case_details_area">
  <div class="container">
    <div class="border_bottom">
      <div class="row ">
        <div class="col-xl-12">
          <div class="details_title">
              <span>A propos de cette actualitée</span>
              <h3><%= @actualite.title %></h3>
          </div>
        </div>
        <div class="col-xl-12">
          <%if @actualite.actuphotos.attached?%>
            <div class="case_thumb width-card">
              <% @actuphoto.each do |photo|%> <%= image_tag photo, class:"tailimg" %> <%end%>
            </div>
            <div class="section-top-border">
				      <h3 class="">Description</h3>
				      <div class="row">
					      <div class="col-lg-12">
						      <blockquote class="generic-blockquote"><span class="ml-5"><%= @actualite.description %> </span></blockquote>
					      </div>
				      </div>
			      </div>
          <%end%> 
            <button type="button" class="btn btn-labeled btn-danger float-right" onclick= window.location.href='<%= actualities_path %>'; value="Retour vers la page Actualité" >
              <span class="btn-label mr-2"><i class="fa fa-arrow-left"></i></span>Retour
            </button>
          <% if user_signed_in?%> <% if current_user.is_admins == true%>
            <h3>Ajouter des photos</h3>
            <%= form_tag actuality_actuphotos_path(@actualite), multipart: true do %> 
              <%= file_field_tag :actuphoto %> <%= submit_tag "mettre à jour" , class:"btn btn-success" %> 
              <% end %> 
              <%= link_to "Editer", edit_actuality_path(@actualite.id) %>
                <%= link_to "Supprimer", actuality_path(@actualite.id), method:"delete", :data => {:confirm => 'Voulez-vous supprimer cette actualiter ?'} %> 
            <%end%> 
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

