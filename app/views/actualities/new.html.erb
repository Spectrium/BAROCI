<div class="card-center p-5">
  <h1 class="text-center mb-5">Que pensez-vous ?</h1>
  <div class="date ">
    <%= form_tag url_for(action:'create'), method:'post' do %>
      <div class="mb-2">Ajouter le titre d'actualité</div>
      <input type="text" class="form-control neo-form text-center" name="title" placeholder="Titre" required = true ><br>
      <div class="mb-2">Son contenu</div>
      <textarea type="text" class="form-control neo-form p-2" style="height: 7em;" name="description" required = true minlength = 10 placeholder="Description..." ></textarea> <br>
      <div class="text-center"><input type="submit" value="Ajouter" class="boxed-btn3 btn-modal"></div>
    <%end%>
  </div>
</div>

<div class="flash">
  <div class="flash__icon">
    <i class="icon fa fa-info"></i>
  </div>
  <% if flash.each do |type, msg| %>
    <p class="flash__body font-weight-bold"><%= msg %></p>     
  <% end.empty? %>
    <p class="font-weight-bold">Vous avez de nouvelle à annoncer? Merci de remplir le formulaire ci-dessus.</p>    
  <% end %>
</div>
