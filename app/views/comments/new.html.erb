<h2>Commentaire sur l'engagement "<%= @engagement.content %>"</h2>
<div id="commentss">
	<% @comment.each do |comment| %>
		<div id="<%=comment.id%>">
			<%= comment.user.full_name %><br>
			<%= comment.content %>
			<% if user_signed_in? %>
				<% if comment.user == current_user || current_user.is_admins == true %>
					 | <%= link_to "Modifier", edit_engagment_comment_path(@engagement.id, comment.id) %> | <%= link_to "Supprimer", engagment_comment_path(@engagement.id, comment.id), method:"delete" ,remote: true%> <br>
				<% end %>
			<% end %>
		</div>
	<% end %>
</div>

<%= form_tag url_for(action:'create'), method:'post ',remote: true do %>
	Votre commentaire
	<input type="text" name="content" id="btn-content" placeholder=" ">

	<input type="submit" value="Ajouter" id="btn-submit">
<%end%>
