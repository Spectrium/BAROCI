<!-- header-start -->
<header>
  <div class="header-area ">
    <div id="sticky-header" class="main-header-area">
      <div class="container">
        <div class="header_bottom_border">
          <div class="row align-items-center">
              <div class="col-xl-3 col-lg-2">
                <a id="logo" href="<%= home_path %>">
                    <%= image_tag  "logo2.png", class:'w-60' %>
                </a>
              </div>
              <div class="col-xl-6 col-lg-7">
                <div class="main-menu d-none d-lg-block">
                    <nav>
                      <ul id="navigation">
                        <!-- Begin NavMenu -->
                          <li class="home text-white"><a class="Nbr active" href="<%= home_path %>">Accueil</a></li>
                          <li class="new text-white"><a class="Nbr" href="<%= actualities_path %>">Actualité</a></li>
                          <li class="globe text-white"><a class="Nbr" href="<%= regions_path %>">Région</a></li>
                          <li><a class="Nbr" href="#">
                             
                                <% if user_signed_in? %> Mon profil 
                                <% else %> Connexion 
                                <% end %>
                                <i class="ti-angle-double-down"></i>
                              </a>
                              <ul class="submenu">
                                  <% if user_signed_in?%>
                                    <li><a href="<%= user_path(current_user.id) %>">Profil</a></li>
                                    <li><a href="<%= destroy_user_session_path %>" data-method="delete">Se déconnecter</a></li>
                                  <% else %>  
                                    <li><a href="<%= new_user_session_path %>">Se connecter</a></li>
                                    <li><a href="<%= new_user_registration_path %>">S'inscrire</a></li>
                                  <% end %>
                              </ul>
                          </li>   

                        <!-- Admin Menu -->    
                          <% if user_signed_in?%> 
                            <% if current_user.is_admins == true%>
                              <li class="add text-white"><a>Ajouter <i class="ti-angle-double-down"></i></a>
                                  <ul class="submenu">
                                    <li class="nav-item type"><a class="nav-link" href="<%= new_actuality_path %>">une actualité</a></li>
                                    <%if Daty.last == nil %>
                                    <li class="nav-item type"><a class="nav-link" href="<%= new_daty_path %>">la date du mandat</a></li>
                                    <% else %>
                                    <li class="nav-item type"><a class="nav-link" href="<%= daty_path(Daty.last.id) %>">éditer la date</a></li>
                                    <% end %>
                                    <li class="nav-item type"><a class="nav-link" href="<%= new_candidat_path %>">un candidat</a></li>
                                  </ul>
                              </li>
                            <% end %> 
                          <% end %>
                    </nav>
                  </div>
                </div>

              <!-- Search Bar -->
              <div class="col-xl-3 col-lg-3 d-none d-lg-block">
                <div class="Appointment">
                  <li>
                    <%= form_tag search_path, method:"post" do %>
                    <div class="input-search">
                      <input type="text" placeholder="Recherche Commune" name="search" class="search focus-none"/>
                      <button class="search-sub" type="submit"><i class="fa fa-search search-cust"></i></button>
                    </div>
                    <%end%>
                  </li>
                </div>
              </div>
                
              </ul>
              <div class="col-12">
                  <div class="mobile_menu d-block d-lg-none"></div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
$(document).ready(function() {
  $('a.active').removeClass('active');
  $('a[href="' + location.pathname + '"]').closest('a').addClass('active'); 
});
</script>
