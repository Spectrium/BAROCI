<h1>Communes#index</h1>
<% @commune.each do |commune|%>
	<%= link_to commune.name, commune_candidats_path(commune.id) %><br>
	<% if user_signed_in? %>
		<% if current_user.is_admins == true %>
			<%= link_to "edit", edit_region_commune_path(@region.id,commune.id),class:'btn btn-primary' %>
			<%= link_to "supprimé", region_commune_path(@region.id,commune.id) , method: "delete",class:'btn btn-danger' %> <br> <br>
		<% end %>
	<% end %>
<% end %>
<% if user_signed_in? %>
	<% if current_user.is_admins == true %>
		<%= link_to "créé une commune", new_region_commune_path(@region.id) ,class:'btn btn-success' %> <br> <br>
	<% end %>
<% end %>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Commune</th>
      <th scope="col">Edit</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <% @commune.each do |commune|%>
  <tbody>
    <tr>
      <th scope="row"><%=commune.id%></th>
      <td><%= link_to commune.name, commune_candidats_path(commune.id) %></td>
	  <% if user_signed_in? %>
		<% if current_user.is_admins == true %>
      <td>Ot<%= link_to "edit", edit_region_commune_path(@region.id,commune.id),class:'btn btn-primary' %>to</td>
      <td><%= link_to "supprimé", region_commune_path(@region.id,commune.id) , method: "delete",class:'btn btn-danger' %></td>
	  <% end %>
	<% end %>
    </tr>
  </tbody>
  <% end %>
</table>