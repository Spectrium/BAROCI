
<div class="container">

  <h2 class="py-3">Liste de toutes les communes dans la région <%= @region.name %></h2>

  <table class="table table-striped">
    <thead class="white">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Commune</th>
  	  <% if user_signed_in? %>
        <% if current_user.is_admins == true %>
          <th scope="col">Editer</th>
          <th scope="col">Supprimer</th>
        <% end %>
  	  <% end %>
        
      </tr>
    </thead>
    <% i = 1 %>
    <% @commune.each do |commune|%>
      <tbody>
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= link_to commune.name.titleize, commune_candidats_path(commune.id) %></td>
          <% if user_signed_in? %>
            <% if current_user.is_admins == true %>
              <td><%= link_to "edit", edit_region_commune_path(@region.id,commune.id),class:'more_btn_edi' %></td>
              <td><%= link_to "supprimé", region_commune_path(@region.id,commune.id) , method: "delete",class:'more_btn_sup' %></td>
            <% end %>
      	  <% end %>
        </tr>
      </tbody>
      <% i += 1 %>
    <% end %>
  </table>
  <% if user_signed_in? %>
    <% if current_user.is_admins == true %>
      <%= link_to "créer une commune", new_region_commune_path(@region.id) ,class:'more_btn' %> <br> <br>
    <% end %>
  <% end %>
</div>