<link rel="stylesheet" href="/css/newcandidat.css" />
<div class="new-candidat pb-5 pt-5">
  <h1 class="text-center">Ajouter un(e) canditat(e)</h1>
  <div class="container content">
    <%= form_tag url_for(action:'create'), method:'post' do %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">Nom complet</label>
        <input type="text" name="full_name" placeholder="Votre nom" class="form-control form-custom" id="name" require="true" minlength="2" />
      </div>
      <div class="form-group col-md-6">
        <label for="mouvence">Mouvance</label>
        <input type="text" name="mouvence" placeholder="Votre mouvence" class="form-control form-custom" id="mouvence" minlength="2" />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="election">Résultat durant l'éléction</label>
        <input type="text" name="resultat" placeholder="Résultat durant l'éléction" class="form-control form-custom" id="election" />
      </div>
      <div class="form-group col-md-6 region-box">
        <label for="candidat">Région du candidat</label>
        <input type="text" name="region" placeholder="Votre région" class="form-control form-custom" id="candidat" />
        <ul class="ul-table" id="region-list"></ul>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12 region-box">
        <label for="commune">Commune du candidat</label>
        <input type="text" name="commune" placeholder="Votre commune" class="form-control form-custom" id="commune" />
        <ul class="ul-table" id="commune-list"></ul>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <input type="submit" value="Ajouter" class="boxed-btn3-line" id="create" />
      </div>
    </div>
    <%end%>
  </div>
</div>
<!-- call js  -->
<script data-turbolinks-track="reload" type="text/javascript" src="/js/region.json"></script>
<script data-turbolinks-track="reload" type="text/javascript" src="/js/commune.json"></script>
<script data-turbolinks-track="reload" type="text/javascript" src="/js/newcandidat.js"></script>
