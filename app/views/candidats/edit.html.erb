<h1>Modification sur notre candidat</h1>
<div class="container">
	<div class="row">
		<%= form_tag url_for(action:'update'), method:'put' do %><br>
			Nom complet<br>
			<input type="text" name="full_name" value="<%= @candidat.name %>" ><br>
			Mouvence<br>
			<input type="text" name="parti" value="<%= @candidat.parti %>" ><br>
			Résultat durant l'éléction<br>
			<input type="text" name="resultat" value="<%= @candidat.resultat %>" ><br>
			Région du candidat<br>
			<input type="text" name="region" value="<%= @candidat.region.name %>" ><br>
			Commune du candidat<br>
			<input type="text" name="commune" value="<%= @candidat.commune.name %>" ><br>
			<input type="submit" value="Enregistrer"><br>
		<%end%>
	</div>
</div>

